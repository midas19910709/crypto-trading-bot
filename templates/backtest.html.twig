{% extends './layout.html.twig' %}

{% block content %}
    <form action="/backtest/submit" method="post">

        <div class="container">
            <div class="row">
                <div class="col-sm">

                    <div class="form-group">
                        <label for="form-pair">Pair</label>
                        <select class="form-control" id="form-pair" name="pair">
                            {% for pair in pairs %}
                                <option>{{ pair }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="form-strategies">Strategy</label>
                        <select class="form-control" id="form-strategies" name="strategy">
                            {% for strategy in strategies %}
                                <option>{{ strategy }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="form-hours">Last Hours</label>
                        <input class="form-control" id="form-hours" name="hours" value="168">
                    </div>
                </div>

                <div class="col-sm">
                    <div class="form-group">
                        <label for="form-tick-interval">Signal Tick Interval (in seconds)</label>
                        <input class="form-control" id="form-tick-interval" name="ticker_interval" value="180">
                    </div>

                    <div class="form-group">
                        <label for="form-options">Options</label>
                        <textarea class="form-control" id="form-options" rows="3" name="options">{"period": "15m"}</textarea>
                    </div>

                </div>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

    </form>
{% endblock %}